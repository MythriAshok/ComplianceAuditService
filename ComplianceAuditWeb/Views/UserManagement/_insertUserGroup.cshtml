@model ComplianceAuditWeb.Models.UserGroupViewModel

@{ Layout = null;}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.Label("GroupName")
    if (Model.Group.UserGroupId > 0)
    {
        @Html.DisplayFor(model => model.Group.UserGroupName) 
    }
    else
    { 
       @Html.TextBoxFor(model => model.Group.UserGroupName)
    }
    @Html.Label("GroupDescription")
    @Html.TextBoxFor(model => model.Group.UserGroupDescription)

    if (Model.Roles != null)
    {
        @Html.Label("Role")
        @Html.DropDownListFor(model => model.Group.UserRoleId, Model.Roles)
    }
    string button = "save";
    if(Model.Group.UserGroupId>0)
    {
        button = "Update";
        @Html.ActionLink("Delete","Deletegroup",routeValues:new { GroupId = Model.Group.UserGroupId })
    }
    <input type="submit" value=@button class="btn btn-default" />
}
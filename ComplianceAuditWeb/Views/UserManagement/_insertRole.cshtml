@model ComplianceAuditWeb.Models.RolesViewModel

@{ Layout = null;}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.Label("RoleName")
    if (Model.roles.RoleId > 0)
        { @Html.DisplayFor(model => model.roles.RoleName)}
    else
        { @Html.TextBoxFor(model => model.roles.RoleName)}

    @Html.Label("IsGroupRole")
    @Html.CheckBoxFor(model => model.roles.IsGroupRole)

    if (Model.privilege != null)
    {
        @Html.Label("Privilege")
        @Html.ListBoxFor(m => m.PrivilegeId, Model.privilege)
    }

    string button = "save";
    if (Model.roles.RoleId > 0)
    {
        button = "Update";
        @Html.ActionLink("Delete", "Deleterole", routeValues: new { RoleId = Model.roles.RoleId })
    }
    <input type="submit" value=@button class="btn btn-default" />

}


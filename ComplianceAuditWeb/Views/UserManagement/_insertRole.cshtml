@model ComplianceAuditWeb.Models.RolesViewModel

@{ Layout = null;}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.LabelFor(model => model.roles.RoleName)
    @Html.TextBoxFor(model => model.roles.RoleName)

    @Html.LabelFor(model => model.roles.IsGroupRole)
    @Html.CheckBoxFor(model => model.roles.IsGroupRole)

    @Html.LabelFor(model => model.roles.IsActive)
    @Html.CheckBoxFor(model => model.roles.IsActive)

    @Html.Label("Privilege")
    @Html.ListBoxFor(m=>m.PrivilegeId, Model.privilege)

    <input type="submit" value="Create" class="btn btn-default" />

}


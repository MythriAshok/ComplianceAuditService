@model ComplianceAuditWeb.Models.AboutCompanyViewModel
@{
    /**/

    ViewBag.Title = "_AboutChildCompany";
}

<h2 class="ML15">Manage Vendor</h2>
<ul class="breadcrumb ML15">
    <li><a href="/Common/dashboard?pid=9">Vendor Management</a></li>
    <li> About Vendor</li>
</ul>
@using (Html.BeginForm())
{
    if (TempData["Success"] != null)
    {
        <center>
            <p class="alert alert-success" style="width:1000px" id=" successMessage">@TempData["Company"]@TempData["Success"]</p>
        </center>
    }
    <img src="/UploadedFiles/@Model.CompanyLogo" alt="" />
    <div class="clearfix"></div>

    <div class="col-xs-4 subSelect ">
        <div class="input-field">
            @Html.Label("Vendor name")
            @Html.TextBoxFor(m => m.CompanyName, new { @class = "inputMaterial ui - autocomplete - input" })
        </div>
    </div>

    @*@Html.Label("Company Name", new { @class = "floating-label" })*@




    <div class="clearfix"></div>



    <div class="col-xs-12 subSelect ">
        <div class="input-field">


            @Html.Label("Vendor Description", new { @class = "floating-label" })
            @Html.TextAreaFor(m => m.CompanyDescription, new { @class = "inputMaterial ui - autocomplete - input" })

        </div>
    </div>
    @Html.HiddenFor(m => m.CompanyID)
    @Html.HiddenFor(m => m.ParentCompanyID)

    <ul class="list-inline continueBtn">
        <li>
            @Html.ActionLink("Modify", "UpdateVendor", new { OrgID = Model.CompanyID }, new { @class = "btn primary-button" })
            <input type="submit" value="Cancel" class="btn primary-button"><span class="ripple" style="width: 92.6094px; height: 92.6094px; top: 49.5px; left: -19.1875px;"></span>
            @Html.ActionLink("Delete", "DeleteVendorUnderCompany", new { OrgID = Model.CompanyID }, new { @class = "btn primary-button" })
            @if (Model.Is_Active == true)
            {
                @Html.ActionLink("Deactivate", "DeactivateVendorUnderCompany", new { Orgid = Model.CompanyID }, new { @class = "btn primary-button" })
            }
            else
            {
                @Html.ActionLink("Activate", "ActivateVendorUnderCompany", new { Orgid = Model.CompanyID }, new { @class = "btn primary-button" })

            }
        </li>
    </ul>

}




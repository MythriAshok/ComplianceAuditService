@model ComplianceAuditWeb.Models.AboutCompanyViewModel
@{
    /**/

    ViewBag.Title = "_AboutChildCompany";
}
<h2 class="ML15">Manage Company</h2>
    <ul class="breadcrumb ML15">
        <li><a href="/Common/dashboard?pid=9">Company Management</a></li>
        <li> Company</li>
    </ul>

@using (Html.BeginForm())
{
    if (TempData["Success"] != null)
    {
        <center>
            <p class="alert alert-success" style="width:1000px" id=" successMessage">@TempData["Success"]</p>
        </center>
    }
    <img src="/UploadedFiles/@Model.CompanyLogo" alt="" />
    <div class="clearfix"></div>

    <div class="col-xs-4 subSelect ">
        <div class="input-field">
            @Html.Label("Branch name")
            @Html.TextBoxFor(m => m.CompanyName, new { @class = "inputMaterial ui - autocomplete - input" })
        </div>
    </div>

    <div class="col-xs-12 subSelect ">
        <div class="input-field">


            @Html.Label("Branch Description", new { @class = "floating-label" })
            @Html.TextAreaFor(m => m.CompanyDescription, new { @class = "inputMaterial ui - autocomplete - input" })

        </div>
    </div>
    @*@Html.Label("Company Name", new { @class = "floating-label" })*@






    <div class="clearfix"></div>



    @Html.HiddenFor(m => m.CompanyID)
    @Html.HiddenFor(m => m.ParentCompanyID)

    <ul class="list-inline continueBtn">
        <li>


            <input type="submit" value="Cancel" class="btn primary-button"><span class="ripple" style="width: 92.6094px; height: 92.6094px; top: 49.5px; left: -19.1875px;"></span>

            @Html.ActionLink("Modify ", "UpdateBranch", new { Orgid = Model.CompanyID }, new { @class = "btn primary-button" })
            @Html.ActionLink("Delete", "DeleteBranch", new { Orgid = Model.CompanyID }, new { @class = "btn primary-button" })
            @if (Model.Is_Active == true)
            {
                @Html.ActionLink("Deactivate", "DeactivateBranch", new { Orgid = Model.CompanyID }, new { @class = "btn primary-button" })
            }
            else
            {
                @Html.ActionLink("Activate", "ActivateBranch", new { Orgid = Model.CompanyID }, new { @class = "btn primary-button" })

            }


        </li>
    </ul>

}



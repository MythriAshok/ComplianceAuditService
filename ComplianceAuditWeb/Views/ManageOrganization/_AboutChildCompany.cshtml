@model ComplianceAuditWeb.Models.AboutCompanyViewModel
@{
    /**/

    ViewBag.Title = "_AboutChildCompany";
}


@using (Html.BeginForm())
{
<div class="mid_content_sec">
    <div class="col-xs-6 subSelect ">
        <div class="input-field">
            @Html.Label("Company Name")
            @Html.TextBoxFor(m => m.CompanyName, new { @class = "inputMaterial ui - autocomplete - input", @readonly = "readonly" })
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="col-xs-12 subSelect ">
        <div class="input-field">
            @Html.Label("Company Description")
            @Html.TextAreaFor(m => m.CompanyDescription, new { @class = "inputMaterial ui - autocomplete - input", @readonly = "readonly" })

        </div>
    </div>
    @Html.HiddenFor(m => m.CompanyID)
    @Html.HiddenFor(m=>m.ParentCompanyID)

    <ul class="list-inline continueBtn">
        <li>
            @Html.ActionLink("Modify Branch", "UpdateBranch", new { Orgid = Model.CompanyID }, new { @class = "btn primary-button" })
            <input type="submit" value="List of Branches" class="btn primary-button"><span class="ripple" style="width: 92.6094px; height: 92.6094px; top: 49.5px; left: -19.1875px;"></span>
            @Html.ActionLink("Delete", "DeleteBranch", new { Orgid = Model.CompanyID }, new { @class = "btn primary-button" })
            if (Model.Is_Active == true)
            {
            @Html.ActionLink("Deactivate", "DeactivateBranch", new { Orgid = Model.CompanyID }, new { @class = "btn primary-button" })
            }
            else
            {
            @Html.ActionLink("Activate", "ActivateBranch", new { Orgid = Model.CompanyID }, new { @class = "btn primary-button" })

            }


        </li>
    </ul>
</div>
            }



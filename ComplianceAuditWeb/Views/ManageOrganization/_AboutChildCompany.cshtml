@model ComplianceAuditWeb.Models.AboutCompanyViewModel
@{
    /**/

    ViewBag.Title = "_AboutChildCompany";
}


@using (Html.BeginForm())
{

    <h3 style="text-align:center;font-weight:100">
        @Html.DisplayFor(m => m.CompanyName, new { @class = "inputMaterial ui - autocomplete - input" })
    </h3>

    @*@Html.Label("Company Name", new { @class = "floating-label" })*@
    <div class="clearfix"></div>
    <img src="/UploadedFiles/@Model.CompanyLogo" alt="" />





    <div class="clearfix"></div>
    @Html.Label("Company Description", new { @class = "floating-label" })
    <div class="box">

        @Html.DisplayFor(m => m.CompanyDescription, new { @class = "inputMaterial ui - autocomplete - input" })
    </div>
   
    @Html.HiddenFor(m => m.CompanyID)
    @Html.HiddenFor(m => m.ParentCompanyID)

    <ul class="list-inline continueBtn">
        <li>

            
            <input type="submit" value="BranchList" class="btn primary-button"><span class="ripple" style="width: 92.6094px; height: 92.6094px; top: 49.5px; left: -19.1875px;"></span>

            @Html.ActionLink("Modify ", "UpdateBranch", new { Orgid = Model.CompanyID }, new { @class = "btn primary-button" })
            @Html.ActionLink("Delete", "DeleteBranch", new { Orgid = Model.CompanyID }, new { @class = "btn primary-button" })
            @if (Model.Is_Active == true)
            {
                @Html.ActionLink("Deactivate", "DeactivateBranch", new { Orgid = Model.CompanyID }, new { @class = "btn primary-button" })
            }
            else
            {
                @Html.ActionLink("Activate", "ActivateBranch", new { Orgid = Model.CompanyID }, new { @class = "btn primary-button" })

            }


        </li>
    </ul>

}



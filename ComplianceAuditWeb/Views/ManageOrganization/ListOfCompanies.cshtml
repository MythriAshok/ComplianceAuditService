@model IEnumerable<ComplianceAuditWeb.Models.ListOfGroupCompanies>

@{
    ViewBag.Title = "Compliance Auditing";
}
<ul class="breadcrumb ML15">
    <li><a href="">Company Management</a></li>
    <li>Companies</li>
</ul>
<h2 class="ML15">List of Companies</h2>

<div style="text-align:right;margin-right: 10px">
    @Html.ActionLink("Create New", "AddCompany")
</div>


<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.OrganizationID)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th>Manage</th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                <center>
                    @*@Html.DisplayFor(modelItem => item.CompanyName)*@
                    @*@Html.DisplayFor(modelItem => item.GroupCompanyLogo)*@

                    @Html.HiddenFor(modelItem => item.OrganizationID)


                    @Html.ActionLink(item.CompanyName, "UpdateCompany", new { Orgid = item.OrganizationID })
                </center>

            </td>

            <td>
                <center>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </center>
            </td>

            <td>
                <center>
                    @Html.DisplayFor(modelItem => item.Logo)
                </center>
            </td>
            <td>
                @if (item.IsActive == true)
                {
                    <center>
                        @Html.ActionLink("Deactivate", "DeactivateCompany", new { Orgid = item.OrganizationID })
                        <br />
                        @Html.ActionLink("Delete", "DeleteCompany", new { Orgid = item.OrganizationID })
                    </center>
                }
                else
                {
                    <center>
                        @Html.ActionLink("Activate", "ActivateCompany", new { Orgid = item.OrganizationID })
                        <br />
                        @Html.ActionLink("Delete", "DeleteCompany", new { Orgid = item.OrganizationID })

                    </center>
                }




            </td>
        </tr>
    }




</table>


